	<script>
    
    $(document).ready(function(){
    	
    	var myToken;
		if (localStorage.token == null) {
			myToken = "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJzdWIiOiIxMjM0NTY3ODkwIiwibmFtZSI6IkpvaG4gRG9lIiwiYWRtaW4iOnRydWV9.TJVA95OrM7E2cBab30RMHrHDcEfxjoYZgeFONFh7HgQ";
		} else {
			myToken = localStorage.token;
		}
    	
    	$("#btnLog").click(function(){
    		localStorage.setItem("username",$("#username").val());
    		var username = $("#username").val();
        	var password =  $("#password").val();
    		$.ajax({
    			  method: "POST",
    			  url: "http://localhost:8080/ExerciciosProgramacao/rest/users/auth",
    			  data: { 
    				  username: username,
    				  password: password,
    			  }
    			})
    		  .done(function( msg ) {
    		      console.log("Token: " + msg);
    		      alert("Login efetuado com sucesso!");
    		      localStorage.setItem("token", msg);
    		      window.location.href = "home.html";
    		  });
    	});
   
    
    $("#btnRegist").click(function(){
    	
    	var username = $("#registUsername").val();
    	var password = $("#registPassword").val();
    	var email = $("#registEmail").val();
    	var name = $("#registNome").val();
    	

		if(username == "" || password=="" || email=="" ||name=="")
			{
			alert("Por favor preencha todos os campos!");
			}else
			{
		
		$.ajax({
			  method: "POST",
			  url: "http://localhost:8080/ExerciciosProgramacao/rest/users",
			  data: { 
				  username: username,
				  password: password,
				  email: email,
				  name: name,
		
			  }
			})
		  .done(function( msg ) {
		      console.log("Token: " + msg)
		      alert("Foi registado com sucesso!");
		      localStorage.setItem("token", msg);
		      window.location.href = "home.html";
		      
		  });
			}
	});
});
    
    </script>

